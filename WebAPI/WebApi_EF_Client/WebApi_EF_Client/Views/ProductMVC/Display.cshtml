@model IEnumerable<WebApi_EF_Client.Models.MVCProductModel>
@{
    ViewBag.Title = "Display";
}

<h2>Display</h2>

<p>
    @Html.ActionLink("Create New Product","Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityAvailable)
        </th>
    </tr>
     @foreach(var item in Model)
            {
<tr>
    <td>@Html.DisplayFor(mItem => item.ProductID)</td>
    <td>@Html.DisplayFor(mItem => item.ProductName)</td>
    <td>@Html.DisplayFor(mItem => item.Price)</td>
    <td>@Html.DisplayFor(mItem => item.QuantityAvailable)</td>
    <td>
        @Html.ActionLink("Edit", "Edit", new {id=item.ProductID}) |
        @Html.ActionLink("Details","Details",new {id=item.ProductID}) |
        @Html.ActionLink("Delete", "Delete", new {id=item.ProductID})
    </td>
</tr>
            }
    </table>